{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "abeldatafactory1"
		},
		"linkedService1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'linkedService1'"
		},
		"linkedService2_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'linkedService2'"
		},
		"linkedService3_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'linkedService3'"
		},
		"linkedService2_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "abelfirstsqlserver.database.windows.net"
		},
		"linkedService2_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "AbelFirstSQLDB"
		},
		"linkedService2_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "abel"
		},
		"linkedService3_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "abelfirstsqlserver.database.windows.net"
		},
		"linkedService3_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "AbelFirstSQLDB"
		},
		"linkedService3_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "abel"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "abeldatafactory1_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"linkedService1_connectionString": {
						"value": "[parameters('linkedService1_connectionString')]"
					},
					"linkedService2_password": {
						"value": "[parameters('linkedService2_password')]"
					},
					"linkedService3_password": {
						"value": "[parameters('linkedService3_password')]"
					},
					"linkedService2_properties_typeProperties_server": {
						"value": "[parameters('linkedService2_properties_typeProperties_server')]"
					},
					"linkedService2_properties_typeProperties_database": {
						"value": "[parameters('linkedService2_properties_typeProperties_database')]"
					},
					"linkedService2_properties_typeProperties_userName": {
						"value": "[parameters('linkedService2_properties_typeProperties_userName')]"
					},
					"linkedService3_properties_typeProperties_server": {
						"value": "[parameters('linkedService3_properties_typeProperties_server')]"
					},
					"linkedService3_properties_typeProperties_database": {
						"value": "[parameters('linkedService3_properties_typeProperties_database')]"
					},
					"linkedService3_properties_typeProperties_userName": {
						"value": "[parameters('linkedService3_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}